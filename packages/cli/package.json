{
  "name": "haber-cli",
  "version": "0.1.1",
  "description": "CLI for installing HaberUI components",
  "main": "dist/index.js",
  "bin": {
    "haber": "bin/haber"
  },
  "files": [
    "bin",
    "dist",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "start": "node dist/index.js",
    "prepublishOnly": "npm run build",
    "version": "git add -A",
    "postversion": "git push && git push --tags"
  },
  "keywords": [
    "cli",
    "components",
    "react",
    "ui",
    "tailwind",
    "next",
    "haberui"
  ],
  "author": "Marco Haber",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/marcoshaber99/haberui.git",
    "directory": "packages/cli"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "dependencies": {
    "chalk": "^4.1.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^8.2.6",
    "node-fetch": "2",
    "ora": "^5.4.1"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^20.17.19",
    "@types/node-fetch": "2",
    "typescript": "^5.7.3"
  }
}
